=form_tag '/search', :method => :get do

  = label :search_label, :search_label, 'Input your search term:'
  = text_field '', :search_term, :value => session[:search_term] if session[:search_term] != nil
  %br

  %br
  = submit_tag 'Search!'

%br
%br

-if @current_results.length == 0
  "No results found."
-@current_results.each do |result|
  %p{:align => 'left'}=link_to result.title, "http://www.ncbi.nlm.nih.gov/pubmed/#{result.id.to_s}"
  %p{:align => 'left'}=result.date
  %p{:align => 'left'}=result.abstract
  %br

=paginate @current_results


