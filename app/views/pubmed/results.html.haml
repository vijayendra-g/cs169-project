
.content
  = render :partial => 'google'
  = render :partial => 'search_box'
  %br
  %br

  -if @current_results.length == 0
    %p{:align =>'center'} "No results found."
  -@current_results.each_with_index do |result, i|
    %div{:class => 'article'}
      %p{:class => 'article_title'}=link_to result.title, "http://www.ncbi.nlm.nih.gov/pubmed/#{result.id.to_s}"
      %p{:class => 'publish_date'}='Publication Date: ' + result.date
      %p{:class => 'publish_date'}='Journal: ' + result.journal
      %p{:class => 'article_abstract'}='Abstract: ' + result.abstract
      -if current_user
        -if current_user.saved?(result.id, current_user.id)
          %p{:class=> "save-article-button unsave-article", :article_id => result.id, :user_id => current_user.id, :id => "article#{(i+1).to_s}"}='Unsave Article'
        -else
          %p{:class=> "save-article-button save-article", :article_id => result.id, :article_title => result.title, :user_id => current_user.id, :id => "article#{(i+1).to_s}"}='Save Article'
      %br
      %br
=paginate @current_results

